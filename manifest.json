{
  "manifest_version": 3,
  "name": "Page Color Changer",
  "version": "1.0",
  "description": "Changes the background color of the current page.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icon16.png"
    }
  },
  "icons": {
    "16": "./icon16.png"
  }
}